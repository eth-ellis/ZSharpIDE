<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="ZSharpIDE.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:ZSharpIDE.Converters">
    
    <Application.Resources>
        
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                
                <XamlControlsResources
                    xmlns="using:Microsoft.UI.Xaml.Controls" />
                
            </ResourceDictionary.MergedDictionaries>

            <converters:InvertBooleanConverter
                x:Key="InvertBoolean" />

            <converters:BoolToVisibilityConverter
                x:Key="BoolToVisibility" />

            <converters:FileInfoNoExtensionConverter
                x:Key="FileInfoNoExtension" />

            <x:Double
                x:Key="ContentDialogMaxWidth">1200</x:Double>

        </ResourceDictionary>
        
    </Application.Resources>
    
</Application>
